<div style="text-align:center;">
<div class="contentPad">
<h2>Sign in</h2>
<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class = "field">
		<%= f.label :email %><br/>
		<%= f.text_field :email%>
	</div>
	<div class="field">
		<%= f.label :password %><br/>
		<%= f.password_field :password%>
	</div>
	<div class="actions">
		<%= f.submit "Sign in"%>
	</div>
<% end %>

<br/>
<p>New User? <%= link_to "Sign up now!", signup_path%> </p>
</div>
<div class="lilguy">
<%= image_tag "lilguy.png"%>
</div>
</div>


