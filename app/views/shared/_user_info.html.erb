<div class="user_info">
<div class="user_info_name_logo">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for @user, :size => 200 %>
    <div class="user_name" style="clear:both;">
      <%= @user.name %>
    </div>
    </div>
    
    <div class="info" style="clear:both;">
      <%= pluralize(@user.microposts.count, "Posts") %>
    </div>
    <div class="contentPad">
    <%= @user.description%>
    </div>
  </a>
</div>